{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "laravelcollective/html": "^6.0",
        "laravel/framework": "^6.0",
        "laravel/tinker": "^1.0"
    },
    "require-dev": {
        "mockery/mockery": "^0.9",
        "phpunit/phpunit": "^5.0",
        "symfony/css-selector": "^3.1",
        "symfony/dom-crawler": "^3.1",
        "kitloong/laravel-migrations-generator": "^6.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpcompatibility/php-compatibility": "^9.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
        "fakerphp/faker": "^1.20"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ],
        "phpcs" : [
            "phpcs -i",
            "mkdir -p ./phpcs/reports",
            "phpcs -p ../ --ignore=*/vendor/* --extensions=php --report=xml --report-file=./phpcs/report.xml || true",
            "xsltproc ./phpcs/phpcshtml.xsl ./phpcs/report.xml > ./phpcs/reports/report-$(date +\"%FT%H%M\").html",
            "rm ./phpcs/report.xml"
        ],
        "phpcbf" : [
            "phpcbf -p ../ --ignore=*/vendor/* --extensions=php"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "allow-plugins": {
            "kylekatarnls/update-helper": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
